<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row_item_relative_layout_parent"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

                <ImageView
                    android:id="@+id/row_item_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/backgroundNewspaper"
                    android:src="@drawable/ic_newspaper" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@id/row_item_image"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    >
                        <TextView
                            android:id="@+id/row_item_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/colorPrimaryText"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="@string/textViewHeading"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/row_item_subHeading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="@string/textViewSubHeading"
                            android:textSize="16sp" />
                </LinearLayout>
</RelativeLayout>